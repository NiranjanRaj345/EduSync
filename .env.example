# Flask Configuration
SECRET_KEY=your_secret_key_here
FLASK_ENV=development

# Database Configuration
# Local Development: postgresql://user:password@localhost:5432/document_system
# Production (Neon): postgresql://user:password@endpoint/dbname?sslmode=require
DATABASE_URL=your-neon-database-url

# Mail Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_specific_password

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Redis Session Configuration
REDIS_URL=redis://localhost:6379  # Redis connection URL (required for sessions)
